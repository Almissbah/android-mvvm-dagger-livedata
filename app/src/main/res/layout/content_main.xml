<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".ui.main.MainActivity" android:background="@android:color/white">

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/rv_categories"
            android:layout_marginTop="8dp"/>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/frame_layout"
            android:layout_below="@+id/rv_categories" android:layout_above="@+id/bottom_nav_bar"
            android:layout_margin="5dp">

    </FrameLayout>
    <android.support.design.widget.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp" app:menu="@menu/menu_buttom_nav_bar"
            android:id="@+id/bottom_nav_bar" android:background="@android:color/white"/>

</RelativeLayout>