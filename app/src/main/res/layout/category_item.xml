<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="category"
                type="com.almissbah.wasit.data.local.db.entity.CategoryEntity"/>
    </data>

    <android.support.constraint.ConstraintLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:text="@{category.title}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_category_title"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@android:color/white" android:textStyle="bold" android:padding="5dp"
                android:textSize="18sp" android:background="@drawable/roundedbutton"/>
    </android.support.constraint.ConstraintLayout>
</layout>