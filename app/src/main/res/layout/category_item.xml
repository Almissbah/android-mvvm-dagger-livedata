<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="category"
                type="com.almissbah.wasit.data.local.db.entity.CategoryEntity"/>
    </data>

    <android.support.constraint.ConstraintLayout

            android:layout_width="100dp"
            android:layout_height="35dp" android:padding="2dp">
        <TextView
                android:text="@{category.title}"
                tools:text="Category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_category_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@android:color/white" android:textStyle="bold" android:padding="5dp"
                android:textSize="14sp" android:background="@drawable/roundedbutton_blue"
                app:layout_constraintTop_toTopOf="parent" android:gravity="center" android:layout_margin="5dp"/>
    </android.support.constraint.ConstraintLayout>
</layout>