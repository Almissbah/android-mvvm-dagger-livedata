<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="offer"
                type="com.almissbah.wasit.data.local.db.entity.OfferEntity"/>
    </data>

    <android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:cardElevation="3dp" android:layout_margin="5dp"
                android:id="@+id/cardView" app:cardCornerRadius="10dp">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_width="299dp"
                        android:layout_height="153dp"
                        android:id="@+id/iv_offer_image"

                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_owner"
                        android:layout_marginTop="12dp" app:layout_constraintHorizontal_bias="0.506"/>
                <TextView
                        android:text="@{offer.title}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_title" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0.069" android:textSize="24sp"
                        android:textColor="@android:color/black"/>
                <TextView
                        android:text="@{offer.description}"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/tv_info" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/iv_offer_image"
                        android:textSize="14sp" app:layout_constraintHorizontal_bias="0.183" android:padding="20dp"
                        android:textColor="@color/colorPrimary"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_owner"
                        android:text="@{offer.offerOwner.title}"
                        app:layout_constraintTop_toBottomOf="@+id/tv_title" android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="@+id/tv_title" android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintHorizontal_bias="0.063"/>
                <ImageView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/total_likes"
                        app:layout_constraintStart_toEndOf="@+id/tv_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                        android:id="@+id/likesOverView"/>
                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="60dp" app:srcCompat="@drawable/like_4"
                        android:id="@+id/btn_like" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/tv_info"
                        android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/iv_offer_image"
                        android:layout_marginTop="24dp" app:layout_constraintHorizontal_bias="0.949"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_info"/>

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>
</layout>